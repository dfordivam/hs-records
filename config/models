User
    username Text       -- Name of user, Used for login
    UniqueUsername username
    email Text          -- Email id
    password ByteString -- Password may not be set yet
    verifyKey Text      --
    resetPasswordKey Text
    verified Bool
    active Bool         -- Inactive user may not be alowed to login
    authLevel AuthorisationLevel
    deriving Typeable

Physician
    name Text
    gender Gender
    position Text
    remarks Textarea Maybe
    active Bool
    deriving Eq
    deriving Show

Nurse
    name Text
    gender Gender
    position Text Maybe
    remarks Textarea Maybe
    active Bool
    deriving Eq
    deriving Show

Patient
    name Text
    gender Gender
    phone Int Maybe
    phone2 Int Maybe
    email Text Maybe
    address Textarea Maybe
    remarks Textarea Maybe
    deriving Eq
    deriving Show

Appointment
    patient PatientId
    physician PhysicianId
    nurse NurseId Maybe
    diagnosis Textarea
    comments Textarea
    startTime UTCTime
    endTime UTCTime Maybe
    deriving Eq
    deriving Show

Procedure
    name Text
    remarks Textarea Maybe
    cost Int
    deriving Eq
    deriving Show

Admission
    patient PatientId
    active Bool
    startTime UTCTime
    endTime UTCTime Maybe
    nurse NurseId
    physician PhysicianId
    room RoomId
    procedures [Procedure]
    diagnosis Textarea
    comments Textarea
    deriving Eq
    deriving Show

Room
    name Text
    available Bool
    beds Int
    remarks Textarea Maybe
    deriving Eq
    deriving Show

PaymentDetails
    patient PatientId
    amount Int
    time UTCTime
    deriving Eq
    deriving Show

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
