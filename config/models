User
    ident Text Maybe    -- Name of user
    email Text          -- Email id, used for login
    password Text Maybe -- Password may not be set yet
    verkey Text Maybe   -- Used for resetting passwords
    verified Bool
    UniqueUser email
    deriving Typeable

Comment json -- Adding "json" causes ToJSON and FromJSON instances to be derived.
    message Text
    userId UserId Maybe
    deriving Eq
    deriving Show

Physician
    name Text
    gender Gender
    position Text
    remarks Text Maybe

Nurse
    name Text
    gender Gender
    position Text
    remarks Text Maybe

Patient
    name Text
    gender Gender
    phone Int Maybe
    phone2 Int Maybe
    email Text Maybe
    address Text Maybe
    remarks Text Maybe

Appointment
    patient PatientId
    physician PhysicianId
    nurse NurseId Maybe
    diagnosis Text
    comments Text
    startTime UTCTime
    endTime UTCTime Maybe

Procedure
    name Text
    remarks Text Maybe
    cost Int

Admission
    patient PatientId
    active Bool
    startTime UTCTime
    endTime UTCTime Maybe
    nurse NurseId
    physician PhysicianId
    room RoomId
    procedures [Procedure]
    diagnosis Text
    comments Text

Room
    name Text
    available Bool
    beds Int
    remarks Text Maybe

PaymentDetails
    patient PatientId
    amount Int
    time UTCTime
    
 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
